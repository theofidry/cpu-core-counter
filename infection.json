{
    "$schema": "./tools/infection/resources/schema.json",
    "ignoreMsiWithNoMutations": true,
    "logs": {
        "text": ".build/infection/infection-log.txt"
    },
    "minCoveredMsi": 100,
    "minMsi": 100,
    "source": {
        "directories": [
            "src"
        ]
    },
    "timeout": 10,

    "mutators": {
        "@default": true,
        "ArrayItemRemoval": {
            "ignore": [
                "Fidry\\CpuCoreCounter\\CpuCoreCounter::getDefaultFinders"
            ]
        },
        "PublicVisibility": false
    }
}
